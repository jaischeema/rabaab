!!!5
%html(ng-app="perann")
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title Triangular
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css"
    = stylesheet_link_tag "application"
    = javascript_include_tag  "http://code.jquery.com/jquery-1.10.1.min.js"
    = javascript_include_tag  "https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular.min.js"
    = javascript_include_tag  "vendor/audiojs/audio.js"
    = javascript_include_tag  "application"
  %body
    - # main structure
    = partial 'layouts/search_controller'
    = yield
    = partial 'layouts/player_controller'

    -# Templates
    = partial 'layouts/album_list'
    = partial 'layouts/song_list'
    = partial 'layouts/player'