!!!5
%html(ng-app="perann")
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title Triangular
    = stylesheet_link_tag "/css/vendor/bootstrap.min.css"
    = stylesheet_link_tag "/css/vendor/bootstrap-glyphicons.css"
    = stylesheet_link_tag "application"
    = javascript_include_tag  "/js/vendor/jquery-1.10.1.min.js"
    = javascript_include_tag  "/js/vendor/angular.min.js"
    = javascript_include_tag  "/js/vendor/angular-route.min.js"
    = javascript_include_tag  "/js/vendor/compat.js"
    = javascript_include_tag  "/js/vendor/nprogress.js"
    = javascript_include_tag  "/js/vendor/mousetrap.min.js"
    = javascript_include_tag  "/js/vendor/soundmanager2.js"
    = javascript_include_tag  "application"
  %body
    #search-form.navbar.navbar-fixed-top.searchBox
    = yield
    = partial 'layouts/player_controller'

    -# Templates
    = partial 'layouts/album_list'
    = partial 'layouts/song_list'
    = partial 'layouts/latest_albums'
    = partial 'layouts/search'
    = partial 'layouts/album'